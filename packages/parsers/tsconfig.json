{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@fern-platform/configs/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__test__/**",
    "src/client/generated/Client.ts",
    "src/client/generated/api/resources/**/client/",
    "src/client/generated/api/resources/docsCache/",
    "src/client/generated/core/"
  ],
  "references": []
}
