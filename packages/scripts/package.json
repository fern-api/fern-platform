{
  "name": "@fern-ui/scripts",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern-ui.git",
    "directory": "packages/scripts"
  },
  "private": true,
  "files": [
    "lib"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "bin": {
    "fern-scripts": "./dist/bundle.cjs"
  },
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "test": "yarn compile && jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --report-unused-disable-directives",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "organize-imports": "organize-imports-cli tsconfig.json",
    "depcheck": "depcheck",
    "dist:cli": "yarn compile && node build.cjs",
    "publish:cli": "yarn dist:cli && cd dist && yarn npm publish"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "execa": "^5.1.1",
    "immer": "^9.0.15",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.7.18",
    "@types/yargs": "^17.0.12",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.14",
    "depcheck": "^1.4.7",
    "esbuild": "^0.15.7",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^2.8.8",
    "typescript": "4.9.4"
  }
}
