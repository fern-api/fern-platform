{
  "name": "@fern-ui/compile-root",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern-ui.git",
    "directory": "packages/_root"
  },
  "private": true,
  "files": [
    "lib"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "test": "yarn compile && jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --report-unused-disable-directives",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "organize-imports": "organize-imports-cli tsconfig.json",
    "depcheck": ":"
  },
  "dependencies": {
    "@fern-ui/app-utils": "workspace:*",
    "@fern-ui/cdk": "workspace:*",
    "@fern-ui/common-components": "workspace:*",
    "@fern-ui/core-utils": "workspace:*",
    "@fern-ui/fonts": "workspace:*",
    "@fern-ui/loadable": "workspace:*",
    "@fern-ui/react-commons": "workspace:*",
    "@fern-ui/react-query-utils": "workspace:*",
    "@fern-ui/scripts": "workspace:*",
    "@fern-ui/split-view": "workspace:*",
    "@fern-ui/toaster": "workspace:*",
    "@fern-ui/ui": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^18.7.18",
    "depcheck": "^1.4.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.2.2",
    "typescript": "4.9.4"
  }
}
