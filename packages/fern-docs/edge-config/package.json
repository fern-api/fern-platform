{
  "name": "@fern-docs/edge-config",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern-platform.git",
    "directory": "packages/fern-docs/edge-config"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "depcheck": "depcheck",
    "dev": "tsc --watch",
    "docs:dev": "pnpm dev",
    "format": "prettier --write --ignore-unknown --ignore-path ../../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../../shared/.prettierignore \"**\"",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:eslint:fix": "pnpm lint:eslint --fix",
    "lint:style": "stylelint 'src/**/*.scss' --allow-empty-input --max-warnings 0",
    "lint:style:fix": "pnpm lint:style --fix",
    "organize-imports": "organize-imports-cli tsconfig.json",
    "test": "vitest --run --passWithNoTests --globals"
  },
  "dependencies": {
    "@fern-docs/auth": "workspace:*",
    "@fern-docs/utils": "workspace:*",
    "@vercel/edge-config": "^1.1.0",
    "url-join": "5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@fern-docs/search-utils": "workspace:*",
    "@fern-platform/configs": "workspace:*",
    "@types/node": "^18.7.18",
    "depcheck": "^1.4.3",
    "eslint": "^9",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.4.2",
    "stylelint": "^16.1.0",
    "typescript": "^5",
    "vitest": "^2.1.4"
  }
}
