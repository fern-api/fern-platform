{
  "extends": "../../../shared/tsconfig.shared.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "lib",
    "rootDir": ".",
    "allowJs": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["./src/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../commons/core-utils"
    },
    {
      "path": "../app"
    }
  ]
}
