{
  "extends": "../../../shared/tsconfig.shared.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "lib",
    "rootDir": ".",
    "allowJs": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", ".next/types/**/*.ts", "__mocks__"],
  "references": [{ "path": "../../commons/core-utils" }, { "path": "../app" }]
}
