---
import type { FernNavigation } from "@fern-api/fdr-sdk";
import { isApiLeaf } from "@fern-api/fdr-sdk/navigation";
import ApiPage from "./ApiPage.astro";

type Props = {
    node: FernNavigation.utils.Node.Found;
};

const { node } = Astro.props;
---

<h1>{node.node.title}</h1>
{isApiLeaf(node.node) && <ApiPage node={node.node} />}
