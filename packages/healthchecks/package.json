{
  "name": "@fern-api/healthchecks",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern-platform.git",
    "directory": "packages/healthchecks"
  },
  "sideEffects": false,
  "type": "module",
  "main": "lib/index.js",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "bin": {
    "fern-health": "./dist/cli.cjs"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf ./dist && tsc --build --clean",
    "compile": "tsup ./src/cli.ts --format cjs",
    "depcheck": "depcheck",
    "format": "prettier --write --ignore-unknown --ignore-path ../../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../../shared/.prettierignore \"**\"",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore",
    "lint:eslint:fix": "pnpm lint:eslint --fix",
    "lint:style": "stylelint 'src/**/*.scss' --allow-empty-input --max-warnings 0",
    "lint:style:fix": "pnpm lint:style --fix",
    "organize-imports": "organize-imports-cli tsconfig.json",
    "test": "vitest --run --passWithNoTests --globals --disable-console-intercept"
  },
  "dependencies": {
    "@algolia/client-search": "^4.23.3",
    "algoliasearch": "^4.22.1",
    "console-table-printer": "^2.12.0",
    "node-emoji": "^2.1.3"
  },
  "devDependencies": {
    "@fern-api/fdr-sdk": "workspace:*",
    "@fern-fern/vercel": "0.0.7",
    "@fern-ui/core-utils": "workspace:*",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.7.18",
    "@types/yargs": "^17.0.32",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "depcheck": "^1.4.3",
    "esbuild": "0.20.2",
    "eslint": "^8.56.0",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.3.2",
    "tsup": "^8.0.2",
    "typescript": "5.4.3",
    "vitest": "^1.5.0",
    "yargs": "^17.4.1"
  }
}
