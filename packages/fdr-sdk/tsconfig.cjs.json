{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@fern-platform/configs/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "lib": ["DOM", "ESNext"],
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "Node",
    "resolveJsonModule": false
  },
  "include": ["./src/**/*"]
}
