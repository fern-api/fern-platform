{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build", "^compile", "codegen"]
    },
    "codegen": {
      "cache": false
    },
    "compile": {
      "outputs": ["dist/**"],
      "dependsOn": ["^compile"]
    },
    "lint": {},
    "lint:eslint": {},
    "lint:style": {},
    "lint:eslint:fix": {},
    "lint:style:fix": {},
    "format:check": {},
    "depcheck": {},
    "clean": {
      "cache": false
    },
    "format": {},
    "test": {
      "dependsOn": ["compile"]
    },
    "test-db": {
      "dependsOn": ["compile"]
    },
    "test-ete": {
      "dependsOn": ["compile"]
    },
    "dev": {
      "persistent": true
    },
    "build:fern-dev": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:fern-prod": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev:fern-prod": {
      "persistent": true
    },
    "dev:fern-dev": {
      "persistent": true
    }
  },
  "globalDependencies": [".eslintrc.js", ".prettierrc.json"]
}
