// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model ApiDefinitionsV2 {
  orgId           String
  apiName         String
  apiDefinitionId String
  createdAt       DateTime @default(now())
  definition      Bytes

  @@id([apiDefinitionId])
}

model Docs {
  url            String
  docsDefinition Bytes

  @@id([url])
}

model DocsV2 {
  orgID                String
  apiName              String
  updatedTime          DateTime @updatedAt
  domain               String
  path                 String
  algoliaIndex         String?
  docsDefinition       Bytes
  indexSegmentIds      Json?
  docsConfigInstanceId String?

  @@id([domain, path])
}

model DocsConfigInstances {
  docsConfigInstanceId       String   @id
  createdAt                  DateTime @default(now())
  referencedApiDefinitionIds Json?
  docsConfig                 Bytes
}

model IndexSegment {
  id        String   @id
  createdAt DateTime @default(now())
  version   String?

  @@map("index_segments")
}

model OverwrittenAlgoliaIndex {
  overwrittenTime DateTime @default(now())
  indexId         String   @unique

  @@map("overwritten_algolia_indexes")
}
