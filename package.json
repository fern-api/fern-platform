{
  "name": "fern-definition-registry",
  "version": "0.0.0",
  "main": "lib/index.js",
  "repository": "git@github.com:fern-api/fern-definition-registry.git",
  "author": "Deep Singhvi <deep@buildwithfern.com>",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.335.0",
    "@aws-sdk/s3-request-presigner": "^3.335.0",
    "@fern-api/venus-api-sdk": "0.0.20",
    "@prisma/client": "4.1.1",
    "@types/jest": "^28.1.6",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.194",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.33.0",
    "fern-api": "^0.4.18",
    "jest": "^28.1.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "prisma": "^4.1.1",
    "simple-progress-webpack-plugin": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "scripts": {
    "dev": "nodemon src/server.ts ",
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "test": "dotenv -e .env.test -- ./scripts/db-tests.sh",
    "format": "prettier src/**/*.ts",
    "format:all": "yarn format --write",
    "format:check": "yarn format --check",
    "lint": "eslint --max-warnings 0 src",
    "lint:fix": "yarn lint --fix",
    "dev:db:migrate": "dotenv -e .env.dev -- yarn prisma migrate deploy",
    "prod:db:migrate": "dotenv -e .env.prod -- yarn prisma migrate deploy",
    "local:db:migrate": "dotenv -e .env.local -- yarn prisma migrate dev",
    "local:db:up": "docker-compose -f docker-compose.local.yml up -d",
    "local:db:down": "docker-compose -f docker-compose.local.yml down -d",
    "local:docker": "dotenv -e .env.local -- ./create_docker.sh local",
    "dev:docker": "dotenv -e .env.dev -- ./create_docker.sh",
    "prod:docker": "dotenv -e .env.prod -- ./create_docker.sh"
  }
}
