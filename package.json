{
  "name": "fern-ui",
  "description": "Fern UI",
  "repository": "https://github.com/fern-api/fern-ui",
  "author": "Birch Solutions, Inc.",
  "private": true,
  "workspaces": [
    "packages/**",
    "!packages/**/lib",
    "!packages/**/dist",
    "!packages/**/generated"
  ],
  "scripts": {
    "clean": "yarn workspace @fern-ui/compile-root run clean",
    "compile": "yarn workspace @fern-ui/compile-root run compile",
    "test": "yarn compile && jest --passWithNoTests",
    "test:only": "jest --passWithNoTests",
    "lint:fix": "yarn lint:monorepo:fix && yarn root-package:fix && yarn lint:eslint:fix && yarn lint:style:fix && yarn format:fix",
    "lint:eslint": "eslint --max-warnings 0 . --report-unused-disable-directives",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:monorepo": "mrlint lint",
    "lint:monorepo:fix": "yarn lint:monorepo --fix",
    "organize-imports": "organize-imports-cli packages/**/tsconfig.json",
    "lint:style": "stylelint 'packages/**/src/**/*.scss' --allow-empty-input --max-warnings 0",
    "lint:style:fix": "yarn lint:style --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ./shared/.prettierignore",
    "format:fix": "yarn format \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ./shared/.prettierignore \"**\"",
    "depcheck": "yarn workspaces foreach --verbose --parallel run depcheck",
    "publish": "yarn workspaces foreach --no-private --parallel --verbose npm publish --access public",
    "add-workspace": "yarn mrlint add-workspace",
    "fern-script": "yarn workspace @fern-ui/scripts dist:cli && node $(yarn workspace @fern-ui/scripts bin fern-scripts)",
    "check-docs-release-blockers": "yarn fern-script check-docs-release-blockers",
    "root-package:check": "yarn fern-script check-root-package",
    "root-package:fix": "yarn root-package:check --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.18.6",
    "@blueprintjs/eslint-plugin": "^6.1.0",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.11",
    "@types/lodash-es": "4.17.12",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "@yarnpkg/sdks": "^3.1.0",
    "chalk": "^5.3.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.56.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.1",
    "execa": "^5.1.1",
    "husky": "^8.0.1",
    "immer": "^9.0.15",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsonc-parser": "~2.2.1",
    "lint-staged": "^13.0.3",
    "lodash-es": "^4.17.21",
    "mrlint": "^0.0.133",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "styled-jsx": "^5.1.2",
    "stylelint": "^16.1.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.1",
    "typescript": "4.9.4",
    "typescript-plugin-css-modules": "^5.0.2"
  },
  "resolutions": {
    "postcss": "8.4.31"
  },
  "packageManager": "yarn@3.6.1",
  "dependenciesMeta": {
    "jsonc-parser@2.2.1": {
      "unplugged": true
    }
  },
  "dependencies": {
    "eslint-config-next": "^14.0.4",
    "stylelint-scss": "^6.0.0"
  }
}
