{
  "name": "fern-definition-registry",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": "git@github.com:fern-api/fern-definition-registry.git",
  "author": "Deep Singhvi <deep@buildwithfern.com>",
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/html-to-text": "^9.0.1",
    "@types/httpsnippet": "^1.23.1",
    "@types/lodash": "^4.14.194",
    "@types/marked": "^5.0.0",
    "@types/node-cache": "^4.2.5",
    "@types/node-cron": "^3.0.8",
    "@types/uuid": "^9.0.1",
    "dotenv-cli": "^6.0.0",
    "fern-api": "^0.4.18",
    "jest": "^28.1.3",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.3",
    "prisma": "^4.15.0",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.15",
    "typescript": "5.2.2"
  },
  "scripts": {
    "build": "turbo run build",
    "build:fdr": "turbo run build --filter=fdr",
    "build:fdr-sdk": "turbo run build --filter=fdr-sdk",
    "clean": "turbo run clean",
    "db:migrate:dev": "yarn workspace fdr db:migrate:dev",
    "db:migrate:local": "yarn workspace fdr db:migrate:local",
    "db:migrate:prod": "yarn workspace fdr db:migrate:prod",
    "db:up:local": "docker-compose -f docker-compose.local.yml up -d",
    "db:down:local": "docker-compose -f docker-compose.local.yml down -d",
    "docker:local": "dotenv -e apps/fdr/.env.local -- ./create_docker.sh local",
    "docker:dev": "dotenv -e apps/fdr/.env.dev -- ./create_docker.sh",
    "docker:prod": "dotenv -e apps/fdr/.env.prod -- ./create_docker.sh",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test-db": "dotenv -e apps/fdr/.env.test -- ./scripts/db-tests.sh",
    "test-ete": "dotenv -e apps/fdr/.env.ete -- ./scripts/ete-tests.sh"
  },
  "packageManager": "yarn@1.22.19"
}
