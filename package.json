{
  "name": "fern-platform-monorepo",
  "private": true,
  "description": "Fern Platform Monorepo",
  "repository": "https://github.com/fern-api/fern-platform",
  "author": "Birch Solutions, Inc.",
  "scripts": {
    "build": "turbo build",
    "check-docs-release-blockers": "pnpm tsx packages/scripts/src/cli.ts -- fern-scripts check-docs-release-blockers",
    "clean": "turbo clean",
    "codegen": "turbo codegen",
    "compile": "turbo compile",
    "depcheck": "turbo depcheck",
    "docs:build": "turbo docs:build",
    "docs:dev": "turbo docs:dev",
    "docs:start": "turbo docs:start",
    "fdr:generate": "pnpm fern generate --api fdr --local && pnpm --filter=@fern-api/fdr-sdk compile",
    "format": "prettier --write --ignore-unknown --ignore-path .prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path .prettierignore \"**\"",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm lint:eslint && pnpm lint:style && pnpm format:check",
    "lint:eslint": "eslint . --report-unused-disable-directives --max-warnings 0 --cache",
    "lint:eslint:fix": "eslint --fix",
    "lint:fix": "pnpm root-package:fix && pnpm lint:eslint:fix && pnpm lint:style:fix && pnpm format",
    "lint:style": "turbo lint:style",
    "lint:style:fix": "turbo lint:style:fix",
    "navigation:generate": "pnpm fern generate --api navigation --local",
    "publish": "pnpm -r --filter=!private --parallel exec -- npm publish --access public",
    "root-package:check": "pnpm tsx packages/scripts/src/cli.ts -- fern-scripts check-root-package",
    "root-package:fix": "pnpm root-package:check --fix",
    "test": "CI=true turbo test",
    "test:playwright": "pnpm exec playwright test",
    "test:update": "CI=true turbo test -- -u"
  },
  "resolutions": {
    "esbuild": "0.20.2",
    "postcss": "8.4.31"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "fern-api": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.24.1",
    "@fern-platform/tsconfig": "workspace:*",
    "@playwright/test": "^1.44.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/is-ci": "^3.0.4",
    "@types/lodash-es": "4.17.12",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@yarnpkg/sdks": "^3.1.0",
    "chalk": "^5.3.0",
    "depcheck": "^1.4.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.9",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-plugin-vitest": "^0.5.4",
    "execa": "^5.1.1",
    "husky": "^8.0.1",
    "immer": "^9.0.15",
    "is-ci": "^3.0.1",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "~2.2.1",
    "lint-staged": "^13.0.3",
    "lodash-es": "^4.17.21",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "react": "^18.3.1",
    "styled-jsx": "^5.1.2",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "turbo": "^2.1.2",
    "typescript": "5.4.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vitest": "^1.6.0"
  },
  "dependenciesMeta": {
    "jsonc-parser@2.2.1": {
      "unplugged": true
    }
  },
  "packageManager": "pnpm@9.4.0",
  "nextBundleAnalysis": {
    "buildOutputDirectory": "packages/ui/docs-bundle/.next",
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 500,
    "showDetails": true
  }
}
